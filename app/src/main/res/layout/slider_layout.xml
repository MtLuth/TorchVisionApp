<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="onboarding"
            type="com.example.torchvisionapp.model.Onboarding" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        bind:ignore="UseCompoundDrawables">


        <TextView
            android:theme="@style/Heading"
            android:id="@+id/onboarding_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{onboarding.headingRes}"/>


        <ImageView
            bind:image_pager="@{onboarding.pager}"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/imgPager"/>

        <ImageView
            bind:image_res="@{onboarding.imageRes}"
            android:id="@+id/onboarding_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:contentDescription="TODO" />

    </LinearLayout>
</layout>
